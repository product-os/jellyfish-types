{
  "name": "@balena/jellyfish-types",
  "version": "0.8.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-types.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Jellyfish TypeScript Types",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "@types/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest,@balena/jellyfish-types",
    "lint-fix": "balena-lint --fix lib",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "json-schema-to-typescript": "^10.1.4"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-client-sdk": "^5.0.0",
    "@balena/jellyfish-config": "^1.4.2",
    "@balena/lint": "^6.1.1",
    "@types/jest": "^26.0.23",
    "@types/json-schema": "^7.0.7",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "fast-json-patch": "^3.0.0-1",
    "jest": "^27.0.6",
    "json-schema": "^0.3.0",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "pg-promise": "^10.10.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
