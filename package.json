{
  "name": "@balena/jellyfish-types",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-types.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Jellyfish TypeScript Types",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "@types/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --typescript --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "lint": "balena-lint --typescript lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest,@balena/jellyfish-types",
    "lint-fix": "balena-lint --typescript --fix lib",
    "unit": "jest",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "json-schema-to-typescript": "^10.1.4"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-client-sdk": "^3.2.53",
    "@balena/lint": "^5.4.1",
    "@types/jest": "^26.0.22",
    "@types/json-schema": "^7.0.7",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.4.0",
    "deplint": "^1.1.3",
    "fast-json-patch": "^3.0.0-1",
    "jest": "^26.6.3",
    "json-schema": "^0.3.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "pg-promise": "^10.9.5",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.3.1",
    "ts-jest": "^26.5.4",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
