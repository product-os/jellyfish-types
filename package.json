{
  "name": "@balena/jellyfish-types",
  "version": "1.2.12",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-types.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Jellyfish TypeScript Types",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "@types/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "bin": {
    "gen-card-types": "./scripts/generate-card-types.js"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "json-schema-to-typescript": "^10.1.5",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.5",
    "@balena/jellyfish-config": "^1.5.7",
    "@balena/lint": "^6.1.1",
    "@types/jest": "^27.0.2",
    "@types/json-schema": "^7.0.9",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "fast-json-patch": "^3.1.0",
    "jest": "^27.3.1",
    "json-schema": "^0.3.0",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "pg-promise": "^10.11.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.8",
    "typescript": "^4.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-11-07T01:02:02.501Z"
  }
}
