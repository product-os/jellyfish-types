{
  "extends": "@balena/lint/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": false,
    "outDir": "./build",
    "esModuleInterop": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "gitRevision": "master",
    "out": "docs"
  },
  "include": [
    "lib/**/*.ts",
    "@types/**/*.d.ts"
  ]
}
